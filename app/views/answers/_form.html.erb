<div class="page-header">
  <h2><%= t 'helpers.answer' %></h2>
</div>

<%= bootstrap_form_for answer, layout: :horizontal do |f| %>
  <%= f.email_field :mail %>
  <%= f.text_area :message %>
  <% unless user_signed_in? && current_user.confirmed? %>
    <%= f.form_group label: { text: 'Captcha' } do %>
      <%= label_tag(:stupid_captcha, t('captcha.label', captcha: 'Maria')) %>
      <%= text_field_tag(:stupid_captcha) %>
    <% end %>
  <% end %>
  <%= f.form_group :privacy_policy_accepted do %>
    <%= f.check_box :privacy_policy_accepted %>
  <% end %>
  <%= f.form_group do %>
    <%= f.primary t('helpers.links.send') %>
  <% end %>

  <%= f.hidden_field :item_type %>
  <%= f.hidden_field :item_id %>
<% end %>
